
public class PP1_4 {

	public static void main(String[] args) {
		//print Knowledge is Power on one line;
		System.out.println("Knowledge is Power");
		//print Knowledge is Power on three lines one per line;
		System.out.println("Knowledge");
		System.out.println("    is");
		System.out.println("   Power");
		//print Knowledge is Power inside a box made up of the characters = and |
		System.out.println("====================");
		System.out.println("|Knowledge is Power|");
		System.out.println("====================");
	}

}
